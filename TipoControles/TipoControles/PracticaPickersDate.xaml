<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipoControles.PracticaPickersDate">
    <ContentPage.Content>
        <StackLayout Margin="0, 40, 0, 0">
            <Label Text="Día de la semana"
                FontSize="40"
                HorizontalOptions="CenterAndExpand" />
            <Picker x:Name="pDay" HorizontalOptions="FillAndExpand"/>
            <Picker x:Name="pMonth" HorizontalOptions="FillAndExpand"/>
            <Picker x:Name="pYear" HorizontalOptions="FillAndExpand"/>
            <Button x:Name="btnCalcDate" Text="Calcular día de la semana" BackgroundColor="OrangeRed"/>
            <Label x:Name="lblDayName" Text="Día: " FontSize="40" HorizontalOptions="FillAndExpand" TextColor="OrangeRed"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>